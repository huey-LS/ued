extends ../common/index
block content
  div.container
    form#reg.reg.w330(method='post')
      div.form-group
        lable(for='title')
          = land('work_title')
        input.form-control(type='text',name='title',id='title')
      div.form-group
        lable(for='content')
          = land('work_content')
        textArea.form-control(type='text',name='content')
      div.form-group
        lable(for='request')
          = land('work_request')
        input.form-control(type='request',name='request')
      div.form-group
        lable(for='jointime')
          = land('work_jointime')
        input.form-control(type='text',name='jointime')
      div.form-group
        lable(for='needtime')
          = land('work_needtime')
        input.form-control(type='text',name='needtime')
      div.form-group
        button
          = land('add')